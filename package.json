{
  "name": "dsquared",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@solidstate/contracts": "^0.0.54",
    "chai": "^4.2.0",
    "commitlint": "^17.4.4",
    "dotenv": "^16.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-mocha": "^10.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.6.7",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-diamond-abi": "^3.0.1",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-tracer": "^2.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "merkletreejs": "^0.2.32",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.4.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.22",
    "@1inch/limit-order-protocol-utils": "^3.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "solmate": "^6.5.0"
  },
  "scripts": {
    "coverage": "hardhat coverage",
    "coverage:ci": "yarn hardhat coverage && yarn istanbul check-coverage --statements 90 --branches 90 --functions 90 --lines 90",
    "lint": "yarn lint:sol && yarn lint:js && yarn prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:js": "eslint --ignore-path ./.eslintignore --ext .js .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test",
    "prepare": "husky install",
    "test:no-fork": "FORCE_NO_FORK=true npx hardhat test",
    "test:fork:arbitrum": "FORK_NETWORK=arbitrum npx hardhat test",
    "test:fork:avax": "FORK_NETWORK=avax npx hardhat test"
  }
}